<%- include('../layout/header.ejs',{title:"Home"}) %>
  <div class="container-fluid">
    <div class="row">
      <div class="card col-sm-10 col-md-10 col-lg-5 shadow p-3  ms-5 mt-2 mb-2">
        <div class="card-body ">
          <div class="noidung">
            <h2>Doanh Thu Tuần</h2>
            <div class="col-12" id="bar-chart"></div>
            <span>Đơn vị VNĐ</span>
          </div>

        </div>
      </div>
      <div class="card col-sm-10 col-md-10 col-lg-5 shadow  ms-5 mt-2 mb-2">
        <div class="card-body">
          <div class="icon">

          </div>
          <div class="noidung">
            <h5>Doanh thu theo thể loại</h5>
            <div class="col-12" id="pie-chart"></div>
            <span>Đơn vị chiếc</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <h4 style="color: black;" class="fst-normal">Danh sách sản phẩm</h4>
      <div class="row d-flex ms-3 ">
        <div class="row form-control  mt-3 ">
          <table id="example" class="table table-striped" style="width:100%">
              <thead>
                  <tr class="table-primary">
                      <th>Ảnh</th>
                      <th>Tên </th>
                      <th>Giá</th>
                      <th>Số lượng</th>
                      <th>Thêm</th>
                  </tr>
              </thead>
              <tbody>
                  <%products.forEach((item)=>{%>
                      <tr>
                          <td>
                              <div style="width: 50px; height: 50px;" class="image">
                                  <img style="width: 100%; height: 100%;" src="<%= item.image %>" alt="">
                              </div>
                          </td>
                          <td class="align-items-center">
                              <%= item.namePro%>
                          </td>
                          <td class="align-items-center">
                              <%= item.price%>
                          </td>
                          <td>
                              <%= item.count%>
                          </td>
                          <td>

                              <div class="row justify-content-center">
                                  <a href="product/edit/<%=item._id%>"
                                      class="btn btn-outline-primary justify-content-center align-items-center col-1 col-md-2 col-lg-3 m-1">
                                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                          fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                          <path
                                              d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                      </svg>
                                  </a>
                                  <button id="delete" data-bs-toggle="modal" data-bs-target="#ModalDelete"
                                      data-bs-id="<%= item._id %>"
                                      class="btn btn-outline-danger justify-content-center align-items-center col-1 col-md-2 col-lg-3 m-1">
                                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                          fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                          <path
                                              d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                                      </svg>
                                  </button>
                                  <a href="product/detail/<%=item._id%>"
                                      class="btn btn-outline-secondary justify-content-center align-items-center col-1 col-md-2 col-lg-3 m-1 ">
                                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                          fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
                                          <path
                                              d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z" />
                                      </svg>
                                  </a>
                              </div>
                          </td>
                      </tr>
                      <%})%>
              </tbody>
          </table>


          <!-- modal delete -->
          <div class="modal fade" id="ModalDelete" tabindex="-1" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog">
                  <div class="modal-content">
                      <div class="modal-header">
                          <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Product</h1>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                          Bạn có chắc muốn xóa sản phẩm này không
                          <form name="form-delete" method="POST"></form>
                      </div>
                      <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <button id="btnDelete" type="button" class="btn btn-outline-danger">Delete</button>
                      </div>
                  </div>
              </div>
          </div>
          <!-- phân trang -->
         
      </div>

      </div>
      <div class="modal fade" id="ModalDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Product</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Bạn có chắc muốn xóa sản phẩm này không
              <form name="form-delete" method="POST"></form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button id="btnDelete" type="button" class="btn btn-outline-danger">Delete</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const exampleModal = document.getElementById('ModalDelete')
      var idProduct;
      const btnDelete = document.getElementById("btnDelete")
      const formDelete = document.forms["form-delete"]
      console.log(formDelete);
      exampleModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget
        idProduct = button.getAttribute('data-bs-id')
        console.log(idProduct);

      })
      btnDelete.onclick = () => {
        formDelete.action = "/home/" + idProduct + "/?_method=DELETE";
        formDelete.submit();
      }
    })
  </script>
  <%- include('../layout/footer.ejs') %>